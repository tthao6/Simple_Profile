<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thait.profile.ProfileActivity"
    android:background="@color/silver">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/propic"
            android:src="@drawable/unknownman"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="Log Out"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/logout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPersonName"
                android:text="@string/name"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPersonName"
                android:text="@string/name"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textAlignment="@+id/name"
                android:background="@color/white"/>


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:text="@string/email"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_marginTop="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:text="@string/email"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:layout_marginTop="14dp"
                android:text="@string/gender"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_below="@+id/email"
                android:layout_alignLeft="@+id/age"
                android:layout_alignStart="@+id/age"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/gender2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:layout_marginTop="14dp"
                android:text="@string/gender"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_below="@+id/email"
                android:layout_alignLeft="@+id/age"
                android:layout_alignStart="@+id/age" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:layout_marginTop="12dp"
                android:text="@string/age"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_below="@+id/gender"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/age2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:layout_marginTop="12dp"
                android:text="@string/age"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_below="@+id/gender"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email" />

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textStyle="bold"
                android:layout_below="@+id/age"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="31dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:layout_marginLeft="315dp"
            android:layout_alignBottom="@+id/logout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="edit"
                android:textColor="@color/blue"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="14dp"
                android:inputType="textPersonName"
                android:text="edit"
                android:textSize="20dp"
                android:textColor="@color/blue"/>


            <TextView
                android:id="@+id/edit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:inputType="textPersonName"
                android:text="edit"
                android:textSize="20dp"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/edit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="edit"
                android:textColor="@color/blue"
                android:textSize="20dp" />


        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
